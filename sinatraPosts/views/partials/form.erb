<form action="/<%= @post[:id]%>" method="post">
  <div >
    <label>Title</label>
    <input type="text" name="title" value="<%= @post[:title]%>" placeholder="Enter the title">
  </div>

  <div >
    <label>Text</label>
    <textarea type="text" name="body" placeholder="Enter a text">
    <%= @post[:body]%></textarea>
  </div>
  <% if (@post[:id]) != ''%>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
  <input type="submit" name="" value="save post">
</form>
